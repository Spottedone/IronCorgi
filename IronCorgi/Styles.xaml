<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetroDict.Common">

	<!-- brushes -->
	<SolidColorBrush x:Key="Background" Color="White" />

	<Style TargetType="TextBlock" x:Key="ICText">
		<Setter Property="FontFamily" Value="Helvetica"></Setter>
		<Setter Property="FontSize" Value="15"></Setter>
	</Style>

	<Style TargetType="TextBlock" x:Key="ICColoredText" BasedOn="{StaticResource MDText}">
		<Setter Property="Foreground" Value="Chartreuse"></Setter>
	</Style>

	<Style x:Key="ICButton" TargetType="Button">
		<Setter Property="MinWidth" Value="80" />
	</Style>

	<Style x:Key="ICHeader" TargetType="TextBlock">
		<Setter Property="FontSize" Value="36"></Setter>
	</Style>

	<!-- ListView -->
	<Style x:Key="ICListView" TargetType="ListView">
		<Setter Property="Padding" Value="10" />
	</Style>

</ResourceDictionary>
